{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "rootDir": "./",
        "outDir": "./",
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
